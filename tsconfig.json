{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["resources/js/*"]
    },

    "noEmit": true,

    "allowJs": true,
    "checkJs": false
  },

  "include": [
    "resources/js/**/*.ts",
    "resources/js/**/*.tsx",
    "resources/js/**/*.d.ts",
    "resources/js/**/*.js",
    "resources/js/**/*.jsx"
  ],

  "exclude": [
    "node_modules",
    "public",
    "vendor"
  ]
}
